# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{java,kt,xml}]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{java,kt,xml}]
charset = utf-8

# 2 space indentation
[*.{gradle,java,kt,xml}]
indent_style = space
indent_size = 2
